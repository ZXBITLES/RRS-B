function CanMoveLeft(x as ubyte,y as ubyte) as ubyte
	if x=0 then return 0
	dim res as ubyte = 0
	dim value as ubyte
	value = map(y+1,x-1)
	res=CheckMovement1(value)
	value = map(y,x-1)
	if res = 1 then
		res=CheckMovement2(value)
	end if
	return res
end function

function CanMoveRight(x as ubyte,y as ubyte) as ubyte
	if x+1>31 then return 0
	dim res as ubyte 
	res = 0
	dim value as ubyte
	value = map(y+1,x+1)
	res=CheckMovement1(value)
	value = map(y,x+1)
	if res = 1 then
		res=CheckMovement2(value)
	end if
	return res
end function

sub DoorSound(open as ubyte)
