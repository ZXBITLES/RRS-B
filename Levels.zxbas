end sub 

sub RefreshDoor(x as ubyte, y as ubyte, a as ubyte, b as ubyte, c as ubyte)
	if a=1 then 
		map(y,x+1)=b
		map(y+1,x+1)=b
		RedrawArea1(x+1,y)
		RedrawArea1(x+1,y+1)
		RedrawArea1(x+2,y)
		if c=1 then RedrawArea1(x,y)		
	else
		map(y,x-1)=b
		map(y+1,x-1)=b
		RedrawArea1(x-1,y)
		RedrawArea1(x-1,y+1)
		RedrawArea1(x-2,y)
		if c=1 then RedrawArea1(x,y)			
	end if 
	DoorSound(0)
	RefreshNPCs()
end sub

function ActivateTerminal(x as ubyte, y as ubyte) as ubyte
	dim ch as ubyte
	ch=map(y,x)	

	if ch=60 then
		dim k1 as ubyte
		dim k2 as ubyte
		k1=map(y,x+1)
		k2=map(y,x-1)
		if k1=10 then
			RefreshDoor(x,y,1,11,0)
			return 1
		end if 
		if k2=10 then
			RefreshDoor(x,y,2,11,0)
			return 1
		end if 
		if k1=11 then
			RefreshDoor(x,y,1,10,0)
			return 1
		end if 
		if k2=11 then
			RefreshDoor(x,y,2,10,0)
			return 1
		end if 
	end if

	if ch=18 then
		TerminalGraphics()		
		sprite2="\A"
		ink 3
		paper 0
		for i=9 to 22		
			print at 7,i; sprite2
			for j=8 to 15
				if i=9 or i=22 then
					sprite1="\A"
				else
					sprite1=" "
				end if
				print at j,i; sprite1
			next j
			print at 15,i; sprite2
			beep .002,i
		next i

		print at 12,12; ink 7; "\B" ' mercury

		print at 10,14; ink 6; "\C" ' venus
		print at 11,13; ink 6; "\D \F" 
		print at 11,14; paper 6; ink 2; "\E" 
		print at 12,14; ink 6; "\G" 

		bright 1
		print at 9,17; ink 1; "\H" ' earth
		print at 10,16; ink 1; "\I \K" 
		print at 10,17; paper 1; ink 4; "\J" 
		print at 11,17; ink 1; "\L" 
		bright 0

		print at 8,20; ink 2; "\M" ' mars
		print at 9,19; ink 2; "\N \P" 
		print at 9,20; paper 2; ink 6; "\O" 
		print at 10,20; ink 2; "\Q" 

		TerminalGraphics2()
		ink 4
		print at 13,17; "\A\B\C\D" ' label
		PlayMusic(4)
		alienterm:
		if MultiKeys(keyFire)>0 then goto quitalienterm
		goto alienterm
		quitalienterm:
		for i=9 to 22
			for j=7 to 15
				RedrawArea1(i,j)
			next j
		next i
		RefreshNPCs()
	end if 
	return 0
end function 


